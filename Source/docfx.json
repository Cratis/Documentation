{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "rules": {
    "InvalidFileLink": "suggestion",
    "InvalidBookmark": "suggestion",
    "DuplicateUids": "suggestion",
    "InvalidTocInclude": "suggestion"
  },
  "metadata": [
    {
      "src": [
        {
          "files": [
            "Clients/DotNET/DotNET.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**"
          ],
          "src": "../Chronicle/Source"
        }
      ],
      "properties": {
        "TargetFramework": "net10.0"
      },
      "output": "api/chronicle/clients/dotnet",
      "disableGitFeatures": false,
      "disableDefaultFilter": false,
    },
    {
      "src": [
        {
          "files": [
            "Clients/AspNetCore/AspNetCore.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**"
          ],
          "src": "../Chronicle/Source"
        }
      ],
      "properties": {
        "TargetFramework": "net10.0"
      },
      "output": "api/chronicle/clients/aspnetcore",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    },
    {
      "src": [
        {
          "files": [
            "Clients/Testing/Testing.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**"
          ],
          "src": "../Chronicle/Source"
        }
      ],
      "properties": {
        "TargetFramework": "net10.0"
      },
      "output": "api/chronicle/clients/testing",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    },
    {
      "src": [
        {
          "files": [
            "Clients/DotNET.InProcess/DotNET.InProcess.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**"
          ],
          "src": "../Chronicle/Source"
        }
      ],
      "properties": {
        "TargetFramework": "net10.0"
      },
      "output": "api/chronicle/clients/dotnet.inprocess",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    },
    {
      "src": [
        {
          "files": [
            "Arc/Arc.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**"
          ],
          "src": "../Arc/Source/DotNET"
        }
      ],
      "properties": {
        "TargetFramework": "net10.0"
      },
      "output": "api/arc/dotnet/arc",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    },
    {
      "src": [
        {
          "files": [
            "bin/Release/net10.0/Cratis.Arc.MongoDB.dll"
          ],
          "src": "../Arc/Source/DotNET/MongoDB"
        }
      ],
      "output": "api/arc/dotnet/mongodb",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    },
    {
      "src": [
        {
          "files": [
            "Fundamentals/Fundamentals.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**"
          ],
          "src": "../Fundamentals/Source/DotNET"
        }
      ],
      "properties": {
        "TargetFramework": "net10.0"
      },
      "output": "api/fundamentals/dotnet/fundamentals",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "obj/**",
          "bin/**",
          "node_modules/**",
          "templates/**",
          ".yarn/**",
          ".config/**",
          "xrefmap.yml",
          "api/**/README.md",
          "../Arc/README.md",
          "../Fundamentals/README.md"
        ]
      },
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "**/node_modules/**",
          "**/.yarn/**",
          "**/storybook-static/node_modules/**"
        ],
        "src": "Articles",
        "dest": "docs"
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**"
        ],
        "exclude": [
          "_site/**",
          "obj/**",
          "bin/**",
          "node_modules/**",
          "templates/**",
          ".yarn/**",
          ".config/**"
        ]
      },
      {
        "files": [
          "**/*.png",
          "**/*.gif",
          "**/*.jpg"
        ],
        "exclude": [
          "_site/**",
          "obj/**",
          "bin/**",
          "node_modules/**",
          "templates/**",
          ".yarn/**",
          ".config/**",
          "api/**"
        ]
      },
      {
        "files": [
          "**/storybook-static/**"
        ],
        "exclude": [
          "_site/**",
          "obj/**",
          "bin/**",
          "templates/**",
          ".yarn/**",
          ".config/**",
          "**/node_modules/**"
        ]
      },
      {
        "files": [
          "**/storybook-static/**"
        ],
        "exclude": [
          "**/node_modules/**"
        ],
        "src": "../Samples"
      },
      {
        "files": [
          "**/storybook-static/**"
        ],
        "exclude": [
          "**/node_modules/**",
          "**/Documentation/**"
        ],
        "src": "../Arc"
      },
      {
        "files": [
          "**/storybook-static/**"
        ],
        "exclude": [
          "**/node_modules/**",
          "**/Documentation/**"
        ],
        "src": "../Chronicle"
      },
      {
        "files": [
          "**/storybook-static/**"
        ],
        "exclude": [
          "**/node_modules/**",
          "**/Documentation/**"
        ],
        "src": "../Fundamentals"
      }
    ],
    "output": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "modern",
      "templates/material"
    ],
    "postProcessors": [
      "ExtractSearchIndex"
    ],
    "markdownEngineProperties": {
      "alerts": {
        "TODO": "alert alert-secondary"
      }
    },
    "disableGitFeatures": false,
    "globalMetadata": {
      "_appTitle": "cratis",
      "_appName": "cratis",
      "_appFaviconPath": "favicon/favicon-512x512.png",
      "_appLogoPath": "images/logo.svg",
      "_appFooter": "Documentation",
      "_copyrightFooter": "Â© Cratis. All rights reserved.",
      "_enableSearch": true,
      "_disableSideFilter": false,
      "_enableNewTab": true,
      "_disableContribution": true,
      "_disableBreadcrumb": false
    }
  }
}
