{
    "metadata": [
        {
            "src": [
                {
                    "files": [
                        "Clients/DotNET/DotNET.csproj"
                    ],
                    "exclude": [
                        "**/obj/**",
                        "**/bin/**"
                    ],
                    "src": "../Chronicle/Source"
                }
            ],
            "dest": "api/chronicle/clients/dotnet",
            "disableGitFeatures": false,
            "disableDefaultFilter": false
        },
        {
            "src": [
                {
                    "files": [
                        "Clients/AspNetCore/AspNetCore.csproj"
                    ],
                    "exclude": [
                        "**/obj/**",
                        "**/bin/**"
                    ],
                    "src": "../Chronicle/Source"
                }
            ],
            "dest": "api/clients/aspnetcore",
            "disableGitFeatures": false,
            "disableDefaultFilter": false
        },
        {
            "src": [
                {
                    "files": [
                        "Clients/XUnit/XUnit.csproj"
                    ],
                    "exclude": [
                        "**/obj/**",
                        "**/bin/**"
                    ],
                    "src": "../Chronicle/Source"
                }
            ],
            "dest": "api/chronicle/clients/xunit",
            "disableGitFeatures": false,
            "disableDefaultFilter": false
        },
        {
            "src": [
                {
                    "files": [
                        "Clients/Orleans.InProcess/Orleans.InProcess.csproj"
                    ],
                    "exclude": [
                        "**/obj/**",
                        "**/bin/**"
                    ],
                    "src": "../Chronicle/Source"
                }
            ],
            "dest": "api/chronicle/clients/orleans.inprocess",
            "disableGitFeatures": false,
            "disableDefaultFilter": false
        },
        {
            "src": [
                {
                    "files": [
                        "Clients/Orleans.XUnit/Orleans.XUnit.csproj"
                    ],
                    "exclude": [
                        "**/obj/**",
                        "**/bin/**"
                    ],
                    "src": "../Chronicle/Source"
                }
            ],
            "dest": "api/chronicle/clients/orleans.xunit",
            "disableGitFeatures": false,
            "disableDefaultFilter": false
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "api/**.yml",
                    "api/index.md"
                ]
            },
            {
                "files": [
                    "**/*.md",
                    "**/toc.yml"
                ],
                "exclude": [
                    "index.md"
                ],
                "src": "../Articles",
                "dest": "articles"
            },
            {
                "files": [
                    "toc.yml",
                    "*.md"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**",
                    "index.html"
                ]
            },
            {
                "files": [
                    "**/*.png",
                    "**/*.gif",
                    "**/*.jpg"
                ],
                "src": "./Documentation",
                "dest": "articles"
            }
        ],
        "overwrite": [
            {
                "files": [
                    "apidoc/**.md"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],
        "dest": "_site",
        "globalMetadataFiles": [],
        "fileMetadataFiles": [],
        "template": [
            "default",
            "modern",
            "templates/material"
        ],
        "postProcessors": [
            "ExtractSearchIndex"
        ],
        "markdownEngineName": "markdig",
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": false,
        "disableGitFeatures": false,
        "globalMetadata": {
            "_appTitle": "Cratis",
            "_appName": "Cratis",
            "_appFaviconPath": "images/favicon.png",
            "_appLogoPath": "images/logo.svg",
            "_appFooter": "Documentation",
            "_copyrightFooter": "Â© Cratis. All rights reserved.",
            "_enableSearch": true,
            "_disableSideFilter": false,
            "_enableNewTab": true,
            "_disableContribution": false,
            "_disableBreadcrumb": false
        }
    }
}