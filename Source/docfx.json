  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "obj/**",
          "bin/**",
          "node_modules/**",
          "templates/**",
          ".yarn/**",
          ".config/**"
        ]
      },
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "src": "Articles",
        "dest": "docs"
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**"
        ],
        "exclude": [
          "_site/**",
          "obj/**",
          "bin/**",
          "node_modules/**",
          "templates/**",
          ".yarn/**",
          ".config/**"
        ]
      },
      {
        "files": [
          "**/*.png",
          "**/*.gif",
          "**/*.jpg"
        ],
        "src": "Articles",
        "dest": "docs"
      }
    ],
    "output": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "modern",
      "templates/material"
    ],
    "postProcessors": [
      "ExtractSearchIndex"
    ],
    "markdownEngineProperties": {
      "alerts": {
        "TODO": "alert alert-secondary"
      }
    },
    "disableGitFeatures": false,
    "globalMetadata": {
      "_appTitle": "cratis",
      "_appName": "cratis",
      "_appFaviconPath": "favicon/favicon-512x512.png",
      "_appLogoPath": "images/logo.svg",
      "_appFooter": "Documentation",
      "_copyrightFooter": "Â© Cratis. All rights reserved.",
      "_enableSearch": true,
      "_disableSideFilter": false,
      "_enableNewTab": true,
      "_disableContribution": true,
      "_disableBreadcrumb": false
    }
  }
}
